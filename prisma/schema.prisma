// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"  
}

model User {
  id        Int @id @default(autoincrement())
  name      String
  email     String @unique
  photo     String?
  password  String
  role      String
}

model Artist {
  id        Int @id @default(autoincrement())
  name      String
  photo     String?
  stream    Int 
  musics    Music[]
}

model Music {
  id        Int @id @default(autoincrement())
  name      String
  genre     String
  album     String
  author    Artist @relation(fields: [authorId], references: [id])
  authorId  Int   
}